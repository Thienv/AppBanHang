<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLetGo.View.PageThemLoai">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Thêm loại hàng" VerticalOptions="Center"  HorizontalOptions="CenterAndExpand" FontSize="Medium" VerticalTextAlignment="Center" TextColor="Black" />
            <Label Text="ID" TextColor="Black"/>
            <Entry x:Name="txtid" TextChanged="Txtid_TextChanged"/>
            <Entry x:Name="isValidID" />
            <Label Text="Tên loại" TextColor="Black"/>
            <Entry x:Name="txttenloai"/>
            <Button Text="Thêm" VerticalOptions="Center" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>